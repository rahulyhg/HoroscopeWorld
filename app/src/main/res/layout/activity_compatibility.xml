<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_vertical"
    android:gravity="center_horizontal"
    tools:context="com.example.kar.horoscope.world.Compatibility">

    <RelativeLayout
        android:id="@+id/avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="80dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/male"
            android:layout_width="77dp"
            android:layout_height="77dp"
            android:src="@drawable/male_avatar" />

        <TextView
            android:id="@+id/gender_male"
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@+id/male"
            android:text="Male"
            android:textColor="@color/white"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/female"
            android:layout_width="77dp"
            android:layout_height="77dp"
            android:layout_marginLeft="100dp"
            android:layout_toRightOf="@+id/male"
            android:src="@drawable/female_avatar" />

        <TextView
            android:id="@+id/gender_female"
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="100dp"
            android:layout_toRightOf="@+id/gender_male"
            android:layout_below="@+id/female"
            android:text="Female"
            android:textColor="@color/white"/>

    </RelativeLayout>

</LinearLayout>
